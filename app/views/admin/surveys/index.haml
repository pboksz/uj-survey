= link_to 'Add survey', new_admin_survey_path

.surveys
- surveys.each do |survey|
  .survey
    %h2= link_to survey.title, edit_admin_survey_path(survey)
    .description= survey.description
    .active= survey.active ? 'Active' : link_to('Activate', activate_admin_survey_path(survey), data: { confirm: 'Activating this will de-activate the currently activated survey. Are you sure?' })
    .delete= link_to 'Delete', admin_survey_path(survey), method: :delete, data: { confirm: 'Are you sure you want to delete this survey and all its associated responses?' }
